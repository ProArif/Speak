<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#378"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mabapps.speak.activity.UserProfile"
    tools:showIn="@layout/app_bar_user_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#378">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/proImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/propic" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Display Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hi there,I am using Speak app."
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:textColor="#000000"
             android:clickable="true"
             android:id="@+id/tvName"
             android:layout_below="@+id/tvUserStatus"
             android:elevation="4dp"
             android:padding="10dp"
             android:textStyle="bold"
             android:textSize="18sp"
             android:text="Name : " />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:textColor="#000000"
             android:clickable="true"
             android:id="@+id/tvEmail"
             android:layout_below="@+id/tvName"
             android:elevation="4dp"
             android:padding="10dp"
             android:textStyle="bold"
             android:textSize="18sp"
             android:text="Email : "/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:textColor="#000000"
             android:clickable="true"
             android:layout_below="@+id/tvEmail"
             android:id="@+id/tvAddr"
             android:elevation="4dp"
             android:padding="10dp"
             android:textStyle="bold"
             android:textSize="18sp"
             android:text="Address : "/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:textColor="#000000"
             android:clickable="true"
             android:id="@+id/tvBirth"
             android:layout_below="@+id/tvAddr"
             android:elevation="4dp"
             android:padding="10dp"
             android:textStyle="bold"
             android:textSize="18sp"
             android:text="Birthday : "/>

         <TextView
             android:id="@+id/showName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/tvName"
             android:layout_alignStart="@+id/tvUserName"
             android:layout_marginBottom="10dp"
             android:layout_marginStart="37dp"
             android:text="TextView" />

         <TextView
             android:id="@+id/showEmail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/tvEmail"
             android:layout_alignStart="@+id/showName"
             android:layout_marginBottom="11dp"
             android:text="TextView" />

         <TextView
             android:id="@+id/showAddr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/tvAddr"
             android:layout_alignStart="@+id/showEmail"
             android:layout_marginBottom="11dp"
             android:text="TextView" />

         <TextView
             android:id="@+id/showBirth"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignStart="@+id/showAddr"
             android:layout_alignTop="@+id/tvBirth"
             android:layout_marginTop="11dp"
             android:text="TextView" />


     </RelativeLayout>

    </ScrollView>


</RelativeLayout>
